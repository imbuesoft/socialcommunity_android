<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/android_card_view_example"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/videolist_item_image"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            android:src="@drawable/vid2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/videolist_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/videolist_item_image"
            android:text="title"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/videolist_item_image"
            app:layout_constraintTop_toTopOf="@+id/videolist_item_image" />

        <TextView
            android:id="@+id/videolist_item_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/late_name"
            android:layout_alignParentTop="true"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/videolist_item_image"
            android:text="subtitle"
            android:textColor="@color/grey_60"
            app:layout_constraintEnd_toEndOf="@+id/videolist_item_title"
            app:layout_constraintStart_toStartOf="@+id/videolist_item_title"
            app:layout_constraintTop_toBottomOf="@+id/videolist_item_title" />

        <TextView
            android:id="@+id/videolist_item_datetime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/videolist_item_author"
            android:layout_alignParentTop="true"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/videolist_item_image"
            android:text="description"
            android:textColor="@color/black"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="@+id/videolist_item_author"
            app:layout_constraintStart_toStartOf="@+id/videolist_item_author"
            app:layout_constraintTop_toBottomOf="@+id/videolist_item_author" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>