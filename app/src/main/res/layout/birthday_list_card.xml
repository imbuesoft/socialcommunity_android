<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/android_card_view_example"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/anni_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="164dp"
            android:layout_marginBottom="4dp"
            android:text="Prakash Gujarati"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/anni_date"
            app:layout_constraintEnd_toStartOf="@+id/anni_remaindays"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/anni_date"
            android:layout_width="0dp"
            android:layout_marginLeft="1dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="244dp"
            android:text="08/04/1990"
            android:textColor="@color/green_800"
            app:layout_constraintEnd_toStartOf="@+id/anni_remaindays"
            app:layout_constraintTop_toBottomOf="@+id/anni_name" />

        <TextView
            android:id="@+id/anni_turns"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/anni_date"
            android:layout_alignParentTop="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="14dp"
            android:text="Turns 29 | Birthday"
            android:textColor="@color/grey_60"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/anni_remaindays"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/anni_date" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@+id/anni_date"
            app:layout_constraintTop_toBottomOf="@+id/anni_date"
            app:srcCompat="@android:drawable/presence_away" />

        <TextView
            android:id="@+id/anni_remaindays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="40\nDays"
            android:textAlignment="center"
            android:textSize="20dp"
            android:background="@drawable/textline"
            android:textStyle="bold"
            android:textColor="@color/green_800"
            android:padding="12dp"
            android:paddingLeft="20dp"
            android:paddingStart="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="3dp"
            android:text="12:00"
            app:layout_constraintBottom_toTopOf="@+id/anni_turns"
            app:layout_constraintEnd_toStartOf="@+id/anni_remaindays"
            app:layout_constraintHorizontal_bias="0.046"
            app:layout_constraintStart_toEndOf="@+id/anni_date"
            app:layout_constraintTop_toBottomOf="@+id/anni_name"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="106dp"
            android:layout_marginBottom="3dp"
            android:text="Rajkot"
            app:layout_constraintBottom_toTopOf="@+id/anni_turns"
            app:layout_constraintEnd_toStartOf="@+id/anni_remaindays"
            app:layout_constraintHorizontal_bias="0.048"
            app:layout_constraintStart_toEndOf="@+id/tv_time"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>