<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ly_dashboard_activity"
    android:background="@color/grey_300"
    android:padding="8dp"
    >

    <ImageView
        android:id="@+id/img_explore_activity_dashboard"
        android:layout_width="40dp"
        android:layout_height="40dp"
        />

    <TextView
        android:id="@+id/txt_explore_activity_dashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:paddingBottom="12dp"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:text="Rajkot Map"
        android:textStyle="bold"
        android:textColor="#A52218"
        android:paddingLeft="16dp" />

    <ImageView
        android:id="@+id/img_arrow_activity_dashboard"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_chevron_right_black_24dp" />
</LinearLayout>
