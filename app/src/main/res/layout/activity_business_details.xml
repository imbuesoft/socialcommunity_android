<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".BusinessDetails">


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_250sdp"
        android:layout_marginLeft="@dimen/_50sdp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/gglogo" />

    <TextView
        android:id="@+id/business_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GujaratiGraphics"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:textSize="24dp"/>

    <TextView
        android:id="@+id/business_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Graphics Design"
        android:textColor="#3F51B5"
        android:layout_marginTop="5dp"
        android:textSize="20dp"/>

    <View style="@style/Divider"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:tint="@color/grey_60"
            android:src="@mipmap/ic_web"/>

        <TextView
            android:id="@+id/bus_web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:clickable="true"
            android:textColorLink="@color/grey_60"
            android:text="www.gujaratigraphics.com"
            android:textColor="@color/grey_80"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:tint="@color/grey_60"
            android:src="@mipmap/ic_call"/>

        <TextView
            android:id="@+id/bus_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+91 9601026377"
            android:autoLink="phone"
            android:clickable="true"
            android:textColorLink="@color/grey_60"
            android:textColor="@color/grey_80"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:tint="@color/grey_60"
            android:src="@mipmap/ic_email"/>

        <TextView
            android:id="@+id/bus_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="gujaratiprakash@gmail.com"
            android:autoLink="email"
            android:clickable="true"
            android:textColorLink="@color/grey_60"
            android:textColor="@color/grey_80"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:tint="@color/grey_60"
            android:src="@mipmap/ic_address"/>

        <TextView
            android:id="@+id/bus_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="map"
            android:text="301, Om Complex, Pushkardham Road, Rajkot - 360005 (Gujarat)"
            android:textColor="@color/grey_80"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:onClick="addressmap"
            android:textSize="20dp"/>
    </LinearLayout>
</LinearLayout>